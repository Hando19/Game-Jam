import pygame
from setup.game_setup import trashbin_dimensions

class Trash:
    def __init__(self, position):
        self.img_path = 'src/assets/TrashBin.png'  # Assuming the file is in the same directory as your script
        self.position = position
        self.collected = False
        self.rect = pygame.Rect(position[0], position[1], trashbin_dimensions, trashbin_dimensions)
        self.broom_image = self.get_scaled_trash()

    def get_scaled_trash(self):
        trash_image_full = pygame.image.load(self.img_path).convert_alpha()
        scaled_trash = pygame.transform.scale(trash_image_full, (self.rect.width, self.rect.height))
        
        return scaled_trash

    def draw(self, surface):
        if not self.collected:
            surface.blit(self.broom_image, self.rect.topleft)
